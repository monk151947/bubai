<div id="header">
  <h1><span id="page_name" data-mercury="full" contenteditable="true"><%= raw @page.name %></span></h1>
</div>

<div class="content">
  <div id="page_content" data-mercury="full"  contenteditable="true">
    <%= raw @page.content %>
  </div>
  <p><%= link_to "Edit Page", "/editor" + request.path, id: "edit_link", data: {save_url: mercury_update_page_path(@page)} %></p>
</div>